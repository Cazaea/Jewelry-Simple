<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical"
    tools:context=".ui.settings.ModifyPasswordActivity">

    <!-- Toolbar样式设置 -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/modify_pwd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:theme="@style/ToolbarStyle"
        app:navigationIcon="@drawable/icon_gray_left_arrow">

        <!-- 自定义标题居中 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改密码"
            android:textColor="@color/colorMainTitle"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorMask" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="原密码"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/change_pwd_et_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorLightGray"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="新密码"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/change_pwd_et_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="设置6~18位数字,字母组合"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorLightGray"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/change_pwd_submit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_main_button"
        android:text="修  改"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:typeface="serif" />

</LinearLayout>
